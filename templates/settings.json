{
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/block-orchestrator-tools.js"}
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/enforce-bead-for-supervisor.js"},
          {"type": "command", "command": "node .claude/hooks/enforce-sequential-dispatch.js"},
          {"type": "command", "command": "node .claude/hooks/remind-inprogress.js"},
          {"type": "command", "command": "node .claude/hooks/inject-discipline-reminder.js"}
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/enforce-branch-before-edit.js"}
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/enforce-branch-before-edit.js"}
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/validate-epic-close.js"}
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/enforce-concise-response.js"},
          {"type": "command", "command": "node .claude/hooks/log-dispatch-prompt.js", "timeout": 10}
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/memory-capture.js", "timeout": 10}
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/validate-completion.js"}
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/session-start.js"}
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/clarify-vague-request.js"}
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {"type": "command", "command": "node .claude/hooks/nudge-claude-md-update.js"}
        ]
      }
    ]
  }
}
